<div class="login-card">
  <h2 class="text-center mb-4">Réinitialiser le mot de passe</h2>

  <%= form_with(url: password_path(resource_name), scope: resource_name, local: true) do |f| %>
    <% if flash.alert %>
      <div class="alert alert-danger"><%= flash.alert %></div>
    <% elsif flash.notice %>
      <div class="alert alert-success"><%= flash.notice %></div>
    <% end %>

    <div class="mb-3">
      <%= f.label :email, "Adresse email", class: "form-label" %>
      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "ex: jean@email.com" %>
    </div>

    <div class="d-grid">
      <%= f.submit "Envoyer les instructions", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="mt-3 text-center">
    <small><%= link_to "Retour à la connexion", new_session_path(resource_name) %></small>
  </div>
</div>
