<div class="container mt-5" style="max-width: 700px;">
  <h1 class="text-center mb-4">Poser une question à l'IA</h1>

  <%= form_with url: ask_path, method: :post, local: true do |form| %>
    <div class="mb-3">
      <%= form.label :question, "Votre question", class: "form-label" %>
      <%= form.text_area :question, class: "form-control", rows: 4, required: true, placeholder: "Exemple : Quel est l’histoire du maillot de 1998 ?" %>
    </div>
    <div class="d-grid">
      <%= form.submit "Envoyer", class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>

  <% if @answer.present? %>
    <div class="alert alert-success mt-4" role="alert" style="white-space: pre-wrap;">
      <strong>Réponse de l'IA :</strong><br />
      <%= @answer %>
    </div>
  <% end %>
</div>
